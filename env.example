# Environment Variables for TradeWebX Application

# API Configuration
NEXT_PUBLIC_BASE_URL=https://your-api-domain.com
NEXT_PUBLIC_PATH_URL=/api
NEXT_PUBLIC_LOGIN_URL=/auth/login
NEXT_PUBLIC_OTP_VERIFICATION_URL=/auth/otp
NEXT_PUBLIC_PRODUCT=TradeWeb
NEXT_PUBLIC_ACTION_NAME=TradeWeb
NEXT_PUBLIC_APP_METADATA_KEY=your-metadata-key
NEXT_PUBLIC_LOGIN_AS_OPTIONS=user,admin
NEXT_PUBLIC_LOGIN_KEY=your-login-key
NEXT_PUBLIC_LOGIN_AS=user
NEXT_PUBLIC_BASE_PATH=
NEXT_PUBLIC_SSO_URL=/TradeWebAPI/api/Main/Login_SSO

# CAPTCHA Configuration
# Set to 'false' to disable CAPTCHA, any other value or not set will enable CAPTCHA
NEXT_PUBLIC_ENABLE_CAPTCHA=true

# Development Mode Configuration
# Set to 'true' to enable development mode (allows localhost without HTTPS)
# Default is 'false' or undefined
NEXT_DEVELOPMENT_MODE=false 